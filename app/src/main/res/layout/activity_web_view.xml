<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".widgets.WebViewActivity">

    <WebView
        android:id="@+id/wvHome"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnLoadUrlByInternet"
            android:layout_width="0dp"
            android:text="loadByInternet"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />


        <Button
            android:id="@+id/btnLoadUrlByLocal"
            android:layout_width="0dp"
            android:text="loadByAssets"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/btnCallJS"
            android:layout_width="0dp"
            android:text="callJSFunc"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />


        <Button
            android:id="@+id/btnCallJSWithReturnValue"
            android:layout_width="0dp"
            android:text="callJSFunc带返回值"
            android:onClick="onClick"
            android:textAllCaps="false"
            android:layout_height="wrap_content"
            android:layout_weight="1.0" />


    </LinearLayout>

</LinearLayout>